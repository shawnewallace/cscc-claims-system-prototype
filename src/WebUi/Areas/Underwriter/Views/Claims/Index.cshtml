@model EDeviceClaims.WebUi.Areas.Underwriter.Models.ClaimsListViewModel


<h1>Open Claims</h1>

<table>
  <tr>
    <th>Claim Id</th>
    <th>Policy Id</th>
    <th>Device</th>
    <th>Customer</th>
    <th>Claim Date</th>
    <th>Status</th>
  </tr>
  
  @foreach (var claim in Model)
  {
    <tr>
      <td>@claim.Id</td>
      <td>@claim.PolicyId</td>
      <td>@claim.Name</td>
      <td>@claim.PolicyHolderName</td>
      <td>@claim.Start</td>
      <td>@claim.Status</td>
      <td>
        @Html.ActionLink("Edit Claim", "Edit", "Claims", routeValues: new { id = claim.Id }, htmlAttributes: new { @class = "btn btn-info btn-sm" })
      </td>
    </tr>
  }
</table>